{
    "swagger": "3.0",
    "info": {
        "description": " Gene and species search  API service on public Ensembl Database.",
        "version": "1.0.3",
        "title": "EMBL search API",
    },
    "host": "localhost:8000",
    "basePath": "/api/v1/embl",
    "tags": [
        {
            "name": "Search",
            "description": "search gene and species",

        }
    ],
    "schemes": [
        "http",
    ],
    "paths": {
        "/search": {
            "get": {
                "tags": [
                    "Search"
                ],
                "summary": "Search Gene and species(optional)",
                "description": "Returns all records matching gene name and species(optional)",
                "operationId": "search",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Gene name",
                        "required": true,
                        "minLength": 3,
                        "type": "string",
                    },
                    {
                        "name": "species",
                        "in": "query",
                        "description": "Name of species(Optional)",
                        "required": false,
                        "type": "string",
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/GeneData"
                        }
                    },
                    "400": {
                        "description": "Error",
                      "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },

                },

            },
        },

    },
    "definitions": {
        "GeneData": {
            "type": "object",
            "required": [
                "name",
            ],
            "properties": {
                "id": {
                    "type": "string",
                },
                "name": {
                    "type": "string",
                    "example": "tbx",
                },
                "species": {
                    "type": "string",
                },
            },
            "xml": {
                "name": "Gene"
            }
        },
      "Error": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                },
            },

        },
    },
}